            android:textColor="#CCFFFFFF"/>
        
    </com.zx.view.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:id="@+id/id_viewpager">
        
    </android.support.v4.view.ViewPager>
        
    
</LinearLayout>