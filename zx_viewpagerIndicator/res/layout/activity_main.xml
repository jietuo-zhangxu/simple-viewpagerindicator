            android:layout_height="fill_parent"
            android:text="短信4"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="收藏5"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"/>
